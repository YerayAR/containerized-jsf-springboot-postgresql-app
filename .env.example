# Environment Variables Template
# Copy this file to .env and customize for your environment
# NEVER commit .env to version control!

# Database Configuration
POSTGRES_PASSWORD=YourSecureDatabasePasswordHere123!
POSTGRES_USER=appuser
POSTGRES_DB=productdb

# JWT Configuration
JWT_SECRET=YourSuperSecretJWTKeyMinimum32CharactersLong123!
JWT_EXPIRATION=86400

# Admin Configuration
PGADMIN_PASSWORD=SecurePgAdminPassword123!

# Application Configuration
SPRING_PROFILES_ACTIVE=docker
SERVER_PORT=8080

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs/backend.log

# Security Configuration
CORS_ALLOWED_ORIGINS=http://localhost:8081,https://localhost:8081
ALLOWED_HOSTS=localhost,127.0.0.1

# Performance Configuration
JAVA_OPTS=-Xms512m -Xmx1024m -XX:+UseG1GC -XX:+UseContainerSupport
CATALINA_OPTS=-Xms256m -Xmx512m -server

# Development Only (Remove in Production)
DEBUG_MODE=false
ENABLE_H2_CONSOLE=false